{
  "manifest_version": 2,
  "name": "Chrome Cap",
  "description": "",
  "version": "1.0",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon/icon.png"
    },
    "default_title": "Chrome Cap",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*",
    "storage",
    "webNavigation",
    "<all_urls>"
  ]
}